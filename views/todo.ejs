<%- include('header.ejs') -%>

<div class="box" id="heading">
    <h1><%= weekday %> <%= date %></h1>
    <div class="btn-group">
        <a href="/" title="Home Tasks" class="tabbed-btn btn">Home Tasks</a>
        <a href="/office" title="Office Tasks" class="tabbed-btn btn">Office Tasks</a>
    </div>
</div>

<div class="box">
    <% todoList.map(list => { %>
        <form action="/checkStatus" method="post">
            <div class="item">
                <input type="hidden" name="listType" value="<%= listType %>">
                <input class="checkCompleted" name="taskId" onClick="this.form.submit()" value="<%= list._id %>" type="checkbox">
                <p><%= list.label %></p>
            </div>
        </form>
    <% }) %>

    <form class="item" action="/" method="post">
        <input autofocus required type="text" name="task">
        <button type="submit" name="listType" value="<%= listType %>">+</button>
    </form>
</div>
<%- include('footer') -%>
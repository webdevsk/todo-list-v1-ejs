<%- include('header.ejs') -%>

<div class="box" id="heading">
    <h1><%= weekday %> <%= date %></h1>
    <div class="btn-group">
        <a href="/" title="Home Tasks" class="tabbed-btn btn">Home Tasks</a>
        <a href="/office" title="Office Tasks" class="tabbed-btn btn">Office Tasks</a>
    </div>
</div>

<div class="box">
    <% todoList.map(task => { %>
        <form action="/checkStatus" method="post">
            <div class="item">
                <input type="hidden" name="taskId" value="<%= task._id %>">
                <input class="" name="completed" onClick="this.form.submit()" type="checkbox"
                <% if(task.completed){ %>
                    checked
                <% } %>
                >
                <p><%= task.label %></p>
            </div>
        </form>
    <% }) %>

    <form class="item" action="/" method="post">
        <input autofocus required type="text" name="task">
        <button type="submit" name="category" value="<%= category %>">+</button>
    </form>
</div>
<%- include('footer') -%>